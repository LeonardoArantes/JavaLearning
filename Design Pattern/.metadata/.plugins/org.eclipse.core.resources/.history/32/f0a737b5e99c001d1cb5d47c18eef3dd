package br.com.alura.loja.order;

import java.math.BigDecimal;
import java.time.LocalDateTime;

import br.com.alura.loja.budget.Budget;

public class CreateOrder {
	
	private String name;
	private BigDecimal valueBuget;
	private int itemsQuantity;
		
	public CreateOrder(String name, BigDecimal valueBuget, int itemsQuantity) {
		this.name = name;
		this.valueBuget = valueBuget;
		this.itemsQuantity = itemsQuantity;
	}
	
	public void execute() {
		Budget budget = new Budget(this.valueBuget, this.itemsQuantity);
		Order order = new Order(name, LocalDateTime.now(), budget);
		
		System.out.println("save code on database");
	}
	
	
}
