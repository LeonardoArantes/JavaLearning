package br.com.alura.loja.budget.status;

import java.math.BigDecimal;

import br.com.alura.loja.budget.Budget;

public class Finalized extends BudgetStatus{
	
	private BigDecimal calculateAdditionalDiscount(Budget budget){		
		return budget.getValue().multiply(new BigDecimal("0.05"));
	}
	
	public void approved(Budget budget) {
		budget.setStatus(new Approved);
	}
	
	public void disapproved(Budget budget) {
		budget.setStatus(new Disapproved);
	}
}
