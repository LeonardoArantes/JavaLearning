package br.com.alura.loja;

import java.math.BigDecimal;

import br.com.alura.loja.budjet.Budget;
import br.com.alura.loja.taxes.TaxationCalculation;
import br.com.alura.loja.taxes.TaxesType;

public class TaxTest {
	
	public static void main(String[] args) {
		Budget budget = new Budget(new BigDecimal("100"));
		TaxationCalculation calculator = new TaxationCalculation();
		System.out.println(calculator.calculate(budget, TaxesType.ICMS));
		System.out.println(calculator.calculate(budget, TaxesType.ISS));
	}
}
